{
  "env": {
    "browser": true,
    "jest/globals": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jest/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["flowtype", "import", "jest"],
  "rules": {
    "flowtype/generic-spacing": "off",
    "flowtype/require-valid-file-annotation": [2, "always"]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
